{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ReverseProxy": {
    "Clusters": {
      "identity-api": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5092/"
          }
        }
      }
    },

    "Routes": {
      "identity-route": {
        "ClusterId": "identity-api",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      }
    }
  }
}
