{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ReverseProxy": {
    "Clusters": {
      "identity-api": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5092/"
          }
        }
      }
    },
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-api",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      }
    }
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "post:/identity/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*:/identity/*",
        "Period": "1m",
        "Limit": 60
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  }
}
